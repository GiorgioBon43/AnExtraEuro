html
    head
        title AnExtraEuro
        script(src="https://cdn.tailwindcss.com")
    body
        h1 NOME: #{projectData.NOME}
        div
            p DESCRIZIONE: #{projectData.DESCRIZIONE}
            p PROPRIETARIO: #{projectData.ACCOUNT_NICKNAME}
            p CATEGORIA: #{projectData.CATEGORIA_NOMINATIVO}
            p OBBIETTIVO: #{projectData.OBBIETTIVO} €
            p DONAZIONI: nulla per ora €
        div(style="position: absolute; top: 10px; right: 10px;")
            p(style="color: red; font-weight: bold;") #{data}
        div(style="position: absolute; top: 50px; right: 10px;")
            button(onclick=`home()`) Torna alla home 

        script.         
            function home() {
                fetch('/login/log', {
                    method: 'GET',
                }).then(() => {
                    window.location.href = '/login/log';
                });
            }